class Solution {
public:
    int longestSubarray(vector<int>& nums, int limit) {
        int n = nums.size();

        multiset<int>st;

        int i=0,j=0;
        int count  =0;

        while(j<n){
            st.insert(nums[j]);

            while(*st.rbegin()-*st.begin() >limit){
                st.erase(st.find(nums[i]));
                i++;
            }

            count = max(count,j-i+1);
            j++;
        }
    return count;    
    }
};
