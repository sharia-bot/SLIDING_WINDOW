class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n = nums.size();

        int last_idx_0 = -1;
        int i=0,j=0;
        int result = INT_MIN;

        while(j<n){
            
            if(nums[j]==0){
                i = last_idx_0+1;
                last_idx_0 = j;
            }

            result = max(result,j-i);
            j++;
        }
    return result;    
    }
};
